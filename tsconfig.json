{
  // cspell:disable
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    // Для абсолютного импорта
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    /////////////////////////////////////////////////////////////////////////
    "types": ["vite-plugin-svgr/client"]
    /////////////////////////////////////////////////////////////////////////
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/jestSetup.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]  
}

